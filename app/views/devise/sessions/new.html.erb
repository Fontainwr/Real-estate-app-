
<h2>Log in</h2>
<section class="form-auth text-center">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
  <div class="form-inputs">
    <div class="input-group">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", style: "width: 100%;" },
                  wrapper_html: { class: "input-group" } %>
    </div>
    <div class="input-group">
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", style: "width: 100%;" },
                  wrapper_html: { class: "input-group" } %>
    </div>
    <%= f.input :remember_me, as: :boolean, wrapper_html: { class: "input-group" } if devise_mapping.rememberable? %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-primary btn-block mb-4" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</section>
<style>
.form-auth {
  width: 100%;
  max-width: 330px;
  padding: 15px;
  margin: auto;
}

.form-inputs {
  margin-bottom: -1px;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}

.input-group {
  margin-bottom: -1px;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
  width: 100%;
}

.btn-primary {
  background-color: blue;
  color: white;
  width: 100%;
}
</style>
